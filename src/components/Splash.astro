---
import "../styles/global.css";

import Btnsek from "./Btnsek.astro";

const { splashbillede } = Astro.props;
---

<section>
  <div class="content">
    <h1>
      FITNESS MED FOKUS PÅ KVALITET
    </h1>
    <h3>
      Kom i gang med træningen i dag <br
      />
      - du får den første måned gratis!
    </h3>

    <a href="/holdbooking">
      <Btnsek content="Se holdplan" />
    </a>
  </div>

  <img
    src="/img/splash_landing.svg"
    alt="illustration"
    {splashbillede}
  />
</section>

<style>
  section {
    display: block;
    overflow: hidden;
    height: 92vh;
  }

  .content {
    width: 45rem;
    padding-left: 7rem;
    margin-top: 12rem;
    padding-bottom: 6rem;
    color: var(--color-bread-text);
  }

  img {
    position: absolute;
    width: 50rem;
    top: 25%;
    right: 0;
    z-index: -1;
  }
</style>
