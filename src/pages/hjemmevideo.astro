---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

import Holdkortkategori from "../components/holdkortkategori.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <link
      rel="stylesheet"
      href="https://use.typekit.net/lhr7bio.css"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Hjemmetræning</title>
  </head>
  <body class="body-bg">
    <Header />

    <!-- Information -->
    <section class="content">
      <h2>Videoer til hjemmetræning</h2>

      <div class="info">
        <p class="cardtitel">
          Som supplement til din træning
          i Fysisk Form, kan du følge
          vores skræddersyede
          hjemmetræningsprogrammer.
        </p>
      </div>
    </section>

    <!-- Filtrering -->
    <section
      x-data="{ kategori: 'allekategorier', skjultehold : 0 }"
      class="holdtyper"
    >
      <!-- Knapper -->
      <div
        class="holdknap_wrapper"
        id="kategori"
        x-model="kategori"
        x-on:change="$nextTick(() => { ingenhold() });"
      >
        <button
          value="alle"
          class="holdkategori filtertext"
        >
          <div class=""></div>
          <a href="">Alle</a>
        </button>

        <!-- Styrke og kondition knap -->
        <button
          value="styrke"
          class="holdkategori filtertext"
        >
          <div class="styrkefarve">
          </div>
          <a href=""
            >Styrke & Kondition</a
          >
        </button>

        <!-- Power knap -->
        <button
          value="power"
          class="holdkategori filtertext"
        >
          <div class="powerfarve"></div>
          <a href="">Power</a>
        </button>

        <!-- Body and mind knap -->
        <button
          value="bodymind"
          class="holdkategori filtertext"
        >
          <div class="bodymindfarve">
          </div>
          <a href="">Body & Mind</a>
        </button>

        <!-- Spinninghold knap -->
        <button
          value="spinning"
          class="holdkategori filtertext"
        >
          <div class="spinningfarve">
          </div>
          <a href="">Spinning</a>
        </button>

        <!-- Dansehold knap -->
        <button
          value="dansehold "
          class="holdkategori filtertext"
        >
          <div class="danseholdfarve">
          </div>
          <a href="">Dansehold</a>
        </button>

        <!-- seniorhold knap -->
        <button
          value="seniorhold"
          class="holdkategori filtertext"
        >
          <div class="seniorholdfarve">
          </div>
          <a href="">Seniorhold</a>
        </button>

        <!-- Specialhold knap -->
        <button
          value="specialhold"
          class="holdkategori filtertext"
        >
          <div class="specialholdfarve">
          </div>
          <a href="">Specialhold</a>
        </button>
      </div>

      <!-- Tabel -->

      <div class="tabel_wrapper">
        <!-- Head -->
        <a href="/singlehjem">
          <Holdkortkategori
            holdtitel="crossfit"
            power={true}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_2.webp"
          />
        </a>
        <a href="/singlehjem">
          <Holdkortkategori
            holdtitel="Senoir Dance"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={true}
            src="/img/holdtype_3.webp"
          />
        </a>

        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Pilatis"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={false}
            bodymind={true}
            specialhold={false}
            src="/img/holdtype_1.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Spinning Senoir"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={true}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_2.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Senoir special"
            power={false}
            seniorhold={true}
            dansehold={false}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_1.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Hip Hip"
            power={false}
            seniorhold={false}
            dansehold={true}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_1.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Puls og Styrke"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={true}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_2.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Heavy lifting"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={true}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_2.webp"
          />
        </a>
        <a href="singlehjem"
          ><Holdkortkategori
            holdtitel=" GLA:D ØVET"
            power={false}
            seniorhold={true}
            dansehold={false}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_3.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Multi Dance"
            power={false}
            seniorhold={false}
            dansehold={true}
            spinning={false}
            styrkekondition={false}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_1.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Core"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={true}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_3.webp"
          />
        </a>
        <a href="/singlehjem"
          ><Holdkortkategori
            holdtitel="Stabilitet"
            power={false}
            seniorhold={false}
            dansehold={false}
            spinning={false}
            styrkekondition={true}
            bodymind={false}
            specialhold={false}
            src="/img/holdtype_1.webp"
          />
        </a>
      </div>
    </section>
    <Footer />
  </body>

  <style>
    .content {
      padding-left: 15rem;
      padding-right: 15rem;
      margin-top: 10rem;
      margin-bottom: 5rem;
    }

    h2 {
      color: var(--color-bread-text);
      margin-bottom: 2rem;
    }
    h3 {
      color: var(--color-bread-text);
      margin-bottom: 1rem;
    }
    p {
      color: var(--color-bread-text);
      margin: 0;
    }
    a {
      text-decoration: none;
    }

    /* -------------------------------- TABEL --------------------------------- */

    .holdtyper {
      padding-left: 15rem;
      padding-right: 15rem;
      max-width: 70rem;
      margin-bottom: 2rem;
    }

    /* Head ---- Uge + lokation */
    .tabelhead {
      display: flex;
    }

    .tabel_wrapper {
      background-color: var(
        --color-tabel-holdcard
      );
      border-radius: 1rem;
      margin-top: 2rem;
      display: flex;
      flex-wrap: wrap;
      flex-direction: row;
      gap: 24px;
      padding: 2.5rem;
    }

    /* HOLD FILTER KNAPPER  */
    button {
      background-color: var(
        --color-footer-background
      );

      border: none;
      padding: 0.7rem;
      color: var(--color-bread-text);
      display: flex;
      gap: 0.7rem;
      align-items: center;
      border-radius: 10px;
    }

    .holdknap_wrapper {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    /* Holdbooking kort */

    .holdbookingwrapper {
      display: flex;
      place-content: center;
      justify-content: space-evenly;

      background-color: var(
        --color-tabel-holdcard
      );
      padding-bottom: 2rem;
      padding-top: 1rem;
      border-radius: 0px 0px 5px 5px;
    }

    /*----------------------- HOLDFARVER PÅ KNAPKATEGORIER -----------------*/

    .powerfarve {
      background-color: var(
        --color-holdfarve-power
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
    .styrkefarve {
      background-color: var(
        --color-holdfarve-styrkekondition
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
    .bodymindfarve {
      background-color: var(
        --color-holdfarve-bodymind
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
    .spinningfarve {
      background-color: var(
        --color-holdfarve-spinninghold
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
    .danseholdfarve {
      background-color: var(
        --color-holdfarve-dansehold
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
    .seniorholdfarve {
      background-color: var(
        --color-holdfarve-seniorhold
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }

    .specialholdfarve {
      background-color: var(
        --color-holdfarve-specialhold
      );
      height: 1rem;
      width: 1rem;
      border-radius: 100%;
    }
  </style>

