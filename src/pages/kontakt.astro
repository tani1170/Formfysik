---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Center from "../components/Center.astro";

import LokationSektion from "../components/lokation_sektion.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <link
      rel="stylesheet"
      href="https://use.typekit.net/lhr7bio.css"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Kontakt</title>
  </head>
  <body class="body-bg">
    <Header />
    <section>
      <div class="content_wrapper">
        <div>
          <h2>Kontakt</h2>
          <div class="kontakt">
            <Center
              centernavn="FormFysisk Amager"
              addresse="  Amager Strandvej 56 2300 københavn S"
              email="info@formamager.dk"
              telefon="3331 2220"
            />

            <Center
              centernavn="FormFysisk Vesterbro"
              addresse=" Vesterbrogade 95A 1620 København V"
              email="  info@formvesterbro.dk"
              telefon="3331 2220"
            />

            <Center
              centernavn="FormFysisk Østerbro"
              addresse="Østerbrogade 37 2100 København Ø"
              email="info@formoesterbro.dk"
              telefon="3331 2220"
            />
          </div>
        </div>

        <!-- Åbningstider -->
        <div class="open">
          <h4>Åbningstider</h4>
          <!-- Træningscenter -->
          <div class="open_content">
            <h3>Træningscenter</h3>
            <p class="bread-bold">
              Man- til torsdag: <span
                class="bread"
                >kl 6:30 til 22:00</span
              >
            </p>
            <p class="bread-bold">
              Fredag: <span
                class="bread"
                >kl 6:30 til 21:00</span
              >
            </p>
            <p class="bread-bold">
              Lør- til søndag: <span
                class="bread"
                >kl 8:00 til 22:00</span
              >
            </p>
          </div>
          <!-- Klinikken -->
          <div class="open_content">
            <h3>Klinikken</h3>
            <p class="bread-bold">
              Man- til torsdag: <span
                class="bread"
                >kl 7:30 til 18:00</span
              >
            </p>
            <p class="bread-bold">
              Fredag: <span
                class="bread"
                >kl 7:30 til 16:00</span
              >
            </p>
            <p class="bread-bold">
              Lør- til søndag: <span
                class="bread"
                >Lukket</span
              >
            </p>
          </div>
        </div>
      </div>
    </section>
    <Footer />
  </body>
</html>
<style>
  body {
  }
  .kontakt {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .content_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-wrap: wrap;
  }

  .open {
    width: fit-content;
    height: fit-content;
    background-color: var(
      --color-tabel-holdcard
    );
    gap: 2.5rem;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    padding-top: 2rem;
    padding-bottom: 2rem;
    padding-left: 5rem;
    padding-right: 5rem;
    color: var(--color-bread-text);
  }

  h3,
  h4,
  p {
    margin: 0;
  }
  .open_content {
    display: grid;
    gap: 1rem;
  }

  section {
    margin-top: 10rem;
    margin-bottom: 5rem;
    overflow: hidden;
  }
  h2 {
    margin: 0;
    padding-bottom: 1.5rem;
  }
</style>
